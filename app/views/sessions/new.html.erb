<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-5">
      <h1 class="card-title text-center" style="color: var(--margin-line);">ACCÈS AUX ARCHIVES</h1>
      
      <div class="mt-4">
        <%= form_tag sessions_path, method: :post do %>
          
          <div class="mb-4">
            <label class="form-label" style="color: var(--margin-line);">IDENTIFIANT (EMAIL) :</label>
            <input type="email" name="email" class="form-control" placeholder="agent@gossip.com" style="background: transparent; color: white; border: 1px solid #444; border-radius: 0;">
          </div>

          <div class="mb-4">
            <label class="form-label" style="color: var(--margin-line);">CODE D'ACCÈS (PASSWORD) :</label>
            <input type="password" name="password" class="form-control" style="background: transparent; color: white; border: 1px solid #444; border-radius: 0;">
          </div>

          <div class="text-center mt-5">
            <button type="submit" class="btn btn-custom w-100">DÉVERROUILLER L'ACCÈS</button>
          </div>

        <% end %>
      </div>

      <div class="mt-3 text-center">
        <%= link_to "PAS ENCORE D'ACCÈS ? CRÉER UN COMPTE", new_user_path, class: "small text-muted", style: "text-decoration: none;" %>
      </div>
    </div>
  </div>
</div>