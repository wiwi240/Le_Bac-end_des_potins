<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-5">
      <h1 class="card-title text-center" style="color: var(--margin-line);">NOUVEL AGENT</h1>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @user do |f| %>
        <div class="mb-3">
          <label class="form-label">PRÉNOM :</label>
          <%= f.text_field :first_name, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <div class="mb-3">
          <label class="form-label">NOM :</label>
          <%= f.text_field :last_name, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <div class="mb-3">
          <label class="form-label">EMAIL :</label>
          <%= f.email_field :email, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <div class="mb-3">
          <label class="form-label">ÂGE :</label>
          <%= f.number_field :age, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <div class="mb-3">
          <label class="form-label">VILLE :</label>
          <%= f.collection_select :city_id, City.all, :id, :name, {}, {class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;"} %>
        </div>

        <div class="mb-3">
          <label class="form-label">MOT DE PASSE :</label>
          <%= f.password_field :password, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <div class="mb-4">
          <label class="form-label">CONFIRMATION :</label>
          <%= f.password_field :password_confirmation, class: "form-control", style: "background:transparent; color:white; border:1px solid #444; border-radius:0;" %>
        </div>

        <button type="submit" class="btn btn-custom w-100">CRÉER LE PROFIL</button>
      <% end %>
    </div>
  </div>
</div>