<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
      <% if @gossip.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @gossip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card">
        <h2 class="card-title text-center p-3">Nouveau Potin</h2>
        
        <div class="p-3">
          <%= form_tag gossips_path, method: "post" do %>
            <div class="mb-3">
              <label class="form-label">Titre</label>
              <%= text_field_tag :title, params[:title], class: "form-control" %>
            </div>

            <div class="mb-3">
              <label class="form-label">Contenu</label>
              <%= text_area_tag :content, params[:content], class: "form-control", rows: 5 %>
            </div>

            <div class="text-center">
              <%= submit_tag "CrÃ©er", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>