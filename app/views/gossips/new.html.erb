<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card p-5">
      <h1 class="card-title mb-4" style="color: var(--margin-line);">NOUVEAU RAPPORT DE TERRAIN</h1>

      <% if @gossip.errors.any? %>
        <div class="alert alert-danger mb-4">
          <p>Le rapport contient <%= @gossip.errors.count %> erreur(s) :</p>
          <ul>
            <% @gossip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_tag url_for(controller: 'gossips', action: 'create'), method: 'post' do %>
        <div class="mb-4">
          <label class="form-label" style="color: var(--margin-line);">TITRE DU POTIN :</label>
          <input type="text" name="title" value="<%= @gossip.title %>" class="form-control" style="background: transparent; color: white; border: 1px solid #444; border-radius: 0;">
          <small style="color: #666;">Format requis : 3 à 14 caractères.</small>
        </div>

        <div class="mb-4">
          <label class="form-label" style="color: var(--margin-line);">CONTENU DU DOSSIER :</label>
          <textarea name="content" class="form-control" rows="10" style="background: transparent; color: white; border: 1px solid #444; border-radius: 0;"><%= @gossip.content %></textarea>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-custom w-100">DIFFUSER L'INFORMATION</button>
        </div>
      <% end %>
      
      <div class="mt-3 text-center">
        <%= link_to "ANNULER ET REVENIR", root_path, class: "small", style: "color: #666; text-decoration: none;" %>
      </div>
    </div>
  </div>
</div>