<div class="text-center mb-5">
  <h1 style="color: var(--margin-line); text-decoration: underline; font-size: 3rem;">LE MUR DES POTINS</h1>
</div>

<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-md-6 mb-4">
      <div class="card p-4 h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text"><%= gossip.content.truncate(90) %></p>
          
          <div class="mt-auto pt-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="small text-muted">AGENT : <%= gossip.user.first_name %></span>
              
              <div class="d-flex align-items-center">
                <span class="me-2 text-danger"><%= gossip.likes.count %> ❤️</span>
                <% if logged_in? %>
                  <% pre_like = gossip.likes.find { |like| like.user_id == current_user.id } %>
                  <% if pre_like %>
                    <%= button_to "UNLIKE", gossip_like_path(gossip, pre_like), method: :delete, class: "btn btn-sm text-muted", style: "background:none; border:none; text-decoration:underline;" %>
                  <% else %>
                    <%= button_to "LIKE", gossip_likes_path(gossip), method: :post, class: "btn btn-sm text-primary", style: "background:none; border:none; text-decoration:underline;" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= link_to "OUVRIR LE FICHIER", gossip_path(gossip), class: "btn btn-custom w-100" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>