<div class="hero-banner mb-5">
  <div class="container">
    <h1 class="display-4 fw-bold">Bienvenue sur Gossip</h1>
    <p class="lead text-muted">Découvrez les rumeurs et les secrets bien gardés de la communauté.</p>
    <div class="mt-4">
      <%= link_to "Voir tous les potins", gossips_path, class: "btn btn-primary btn-lg px-5" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row g-4">
    <% @gossips.each do |gossip| %>
      <div class="col-md-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <h5 class="card-title mb-0"><%= gossip.title %></h5>
              <span class="badge bg-light text-danger border">
                <%= gossip.likes.count %> ❤️
              </span>
            </div>
            <p class="card-text mb-4">
              Auteur : <span class="fw-semibold text-dark"><%= gossip.user.first_name %></span>
            </p>
            <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <% if logged_in? %>
                  <% pre_like = gossip.likes.find { |like| like.user_id == current_user.id } %>
                  <% if pre_like %>
                    <%= button_to "Unlike", gossip_like_path(gossip, pre_like), method: :delete, class: "btn btn-sm btn-link text-danger text-decoration-none" %>
                  <% else %>
                    <%= button_to "Like", gossip_likes_path(gossip), method: :post, class: "btn btn-sm btn-link text-primary text-decoration-none" %>
                  <% end %>
                <% end %>
              </div>
              <%= link_to "Lire la suite", gossip_path(gossip.id), class: "btn btn-outline-primary btn-sm rounded-pill px-3" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>