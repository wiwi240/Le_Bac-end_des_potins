<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-primary mt-5">
        <div class="card-header">CONTACTEZ-NOUS</div>
        <div class="card-body">
          <div class="form-group">
            <label class="form-label mt-4">Nom</label>
            <input type="text" class="form-control" placeholder="Votre nom">
          </div>
          <div class="form-group">
            <label class="form-label mt-4">Email</label>
            <input type="email" class="form-control" placeholder="votre@email.com">
          </div>
          <div class="form-group">
            <label class="form-label mt-4">Message</label>
            <textarea class="form-control" rows="3" placeholder="Votre message..."></textarea>
          </div>
          <button type="submit" class="btn btn-primary mt-4 w-100">ENVOYER</button>
        </div>
      </div>
    </div>
  </div>
</div>